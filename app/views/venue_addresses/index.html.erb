<div class="page-header">
  <h1>
    Venue addresses
    <a href="/venue_addresses/new" class="btn btn-lg btn-success">New Venue address</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Neighborhood</th>
        <th>Actions</th>
      </tr>

      <% @venue_addresses.each do |venue_address| %>
      <tr>
        <td><%= venue_address.address %></td>
        <td><%= venue_address.neighborhood %></td>
        <td>
          <a href="/venue_addresses/<%= venue_address.id %>" class="btn btn-primary">Show</a>
          <a href="/venue_addresses/<%= venue_address.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_venue_address/<%= venue_address.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @venue_addresses, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
